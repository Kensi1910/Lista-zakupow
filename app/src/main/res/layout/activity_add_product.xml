<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.lenovo.myapplication.CardViewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/add_new_produkt_edit_text"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:hint="Nazwa produktu"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/add_new_produkt_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Dodaj"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/wyswietlProdukt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="Wyswietl"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_recycler_view_dodajProdukt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp"
        android:layout_marginTop="70dp"
        tools:context="com.example.lenovo.myapplication.AddProductActivity">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_wyswietl_produkty_baza"
        android:layout_width="match_parent"
        android:layout_height="166dp" />
</LinearLayout>